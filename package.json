{
  "name": "loyalbrew-app",
  "version": "1.0.0",
  "description": "Full-stack web application for a modern coffee shop, featuring customer authentication, online ordering, and a comprehensive loyalty and rewards program.",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "dev:server": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "migrate": "npx prisma migrate dev",
    "seed": "ts-node prisma/seed.ts",
    "setup": "npm run migrate && npm run seed",
    "test": "jest --runInBand --detectOpenHandles"
  },
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "@google/genai": "^0.1.0",
    "@prisma/client": "^5.10.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nanoid": "^5.0.6",
    "node-cron": "^3.0.3",
    "process": "^0.11.10",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.24",
    "@types/node-cron": "^3.0.11",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jest": "^29.7.0",
    "prisma": "^5.10.2",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "vite": "^5.1.4"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
